pipeline{
    agent any
    tools {
        maven 'Maven 3.6.3'
        jdk 'jdk8'
    }

    stages{
        stage('Build'){
	    environment{
		def COVERALLS_TOKEN = readFile('jenkins-files/coveralls-token.txt')
	    }
            steps {
                echo 'Build started'
                sh 'mvn -f com.riccardomalavolti.apps.todolist/pom.xml clean jacoco:prepare-agent'
                sh "mvn -f com.riccardomalavolti.apps.todolist/pom.xml compile -DrepoToken=${COVERALLS_TOKEN}"
                echo '======= Build finished ======='
                }
        }
	stage('Testing'){
	   steps{
		echo 'Testing started'
                sh 'mvn -f com.riccardomalavolti.apps.todolist/pom.xml test -Pjacoco,mutation-testing coveralls:report'
		junit 'com.riccardomalavolti.apps.todolist/target/surefire-reports/*.xml'
		echo 'Ending testing phase'
	   }
	}
	stage('Verifing'){
	   environment{
		def SONARCLOUD_TOKEN = readFile('jenkins-files/sonarcloud-token.txt')
	    }
	    steps{
		echo 'Code quality analysis started'
		sh 'mvn -f com.riccardomalavolti.apps.todolist/pom.xml clean verify sonarcloud:sonarcloud -Dsonar.login=${SONARCLOUD_TOKEN} -Pjacoco,mutation-testing'
		junit 'com.riccardomalavolti.apps.todolist/target/site/jacoco/*.xml'
		echo 'Code analysis ended.'
	   }
	}
    }
}
